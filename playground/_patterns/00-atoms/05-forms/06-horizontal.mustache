<form class="f-horizontal" action="#" role="form">
  <fieldset class="fieldset wf-2">
    <legend class="legend">Inputs</legend>
    <div class="f-group">
      <label for="text" class="control-label">Username</label>
      <div class="w-3">
        <input id="text" type="text" class="f-control w-3" placeholder="Text Input" />
      </div>
    </div>
    <div class="f-group">
      <label for="password" class="control-label">Password</label>
      <div class="w-3">
        <input id="password" type="password" class="f-control" placeholder="Type your Password" autocomplete="" />
      </div>
    </div>
  </fieldset>

  <div class="f-group">
    <div class="w-10 w-offset-2">
      <label for="radio1" class="radio">
        <input id="radio1" name="radio" type="radio" checked="" /> Option 1
      </label>
      <label for="radio2" class="radio">
        <input id="radio2" name="radio" type="radio" /> Option 2
      </label>
    </div>
  </div>
  
  <div class="f-group">
    <div class="w-3 w-offset-2">
      <button type="submit" class="btn--primary">Login</button>
    </div>
  </div>
</form>