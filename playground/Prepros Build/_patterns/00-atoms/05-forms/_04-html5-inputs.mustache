<fieldset>
  <div class="f-group">
    <label for="ic">Color input</label>
    <input type="color" id="ic" class="f-control" value="#000000" />
  </div>
  <div class="f-group">
    <label for="in">Number input</label>
    <input type="number" id="in" class="f-control" min="0" max="10" value="5" />
  </div>
  <div class="f-group">
    <label for="ir">Range input</label>
    <input type="range" id="ir" class="f-control" value="10" />
  </div>
  <div class="f-group">
    <label for="idd">Date input</label>
    <input type="date" id="idd" class="f-control" value="1970-01-01" />
  </div>
  <div class="f-group">
    <label for="idm">Month input</label>
    <input type="month" id="idm" class="f-control" value="1970-01" />
  </div>
  <div class="f-group">
    <label for="idw">Week input</label>
    <input type="week" id="idw" class="f-control" value="1970-W01" />
  </div>
  <div class="f-group">
    <label for="idt">Datetime input</label>
    <input type="datetime" id="idt" class="f-control" value="1970-01-01T00:00:00Z" />
  </div>
  <div class="f-group">
    <label for="idtl">Datetime-local input</label>
    <input type="datetime-local" id="idtl" class="f-control" value="1970-01-01T00:00" />
  </div>
</fieldset>