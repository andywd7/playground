<form class="f-horizontal" action="#" role="form">
  <fieldset class="wf-2">
    <legend>Inputs</legend>
    <div class="f-group">
      <label for="title" class="control-label">Name</label>
      <div class="f-2">
        <select id="title" class="f-control">
          <option>Mr</option>
          <option>Mrs</option>
          <option>Ms</option>
        </select>
      </div>
      <div class="f-4">
        <input id="text" type="text" class="f-control" placeholder="First" />
      </div>
      <div class="f-4">
        <input id="password" type="password" class="f-control" placeholder="Last" />
      </div>
    </div>

    <div class="f-group">
      <label for="job" class="control-label">Job</label>
      <div class="f-6">
        <input id="job" type="text" class="f-control" placeholder="Job Title" />
      </div>
    </div>
  </fieldset>

  <fieldset class="f-group wf-2">
    <legend class="sr-only">Checkboxes</legend>
    <label class="control-label">Options</label>
    <div class="f-10">
      <label for="radio1" class="radio">
        <input id="radio1" name="radio" type="radio" checked="" /> Option 1
      </label>
      <label for="radio2" class="radio">
        <input id="radio2" name="radio" type="radio" /> Option 2
      </label>
    </div>
  </fieldset>

  <div class="f-group">
    <div class="f-3 w-offset-2">
      <button type="submit" class="btn btn--primary">Login</button>
    </div>
  </div>
</form>